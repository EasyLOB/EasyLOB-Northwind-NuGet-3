<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <sectionGroup name="system.web.webPages.razor" type="System.Web.WebPages.Razor.Configuration.RazorWebSectionGroup, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35">
      <section name="host" type="System.Web.WebPages.Razor.Configuration.HostSection, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
      <section name="pages" type="System.Web.WebPages.Razor.Configuration.RazorPagesSection, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <appSettings>
    <add key="webpages:Enabled" value="false" />
  </appSettings>
  <system.web>
    <compilation>
      <assemblies>
        <add assembly="System.Web.Mvc, Version=5.2.4.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" />
      </assemblies>
    </compilation>
  </system.web>
  <system.web.webPages.razor>
    <host factoryType="System.Web.Mvc.MvcWebRazorHostFactory, System.Web.Mvc, Version=5.2.4.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" />
    <pages pageBaseType="System.Web.Mvc.WebViewPage">
      <!-- !!! -->
      <namespaces>
        <add namespace="System.Configuration" />
        <add namespace="System.Globalization" />
        <add namespace="System.Web.Mvc" />
        <add namespace="System.Web.Mvc.Ajax" />
        <add namespace="System.Web.Mvc.Html" />
        <add namespace="System.Web.Optimization" />
        <add namespace="System.Web.Routing" />
        <!-- Json.NET -->
        <add namespace="Newtonsoft.Json" />
        <!-- Syncfusion -->        
        <add namespace="Syncfusion.JavaScript" />
        <add namespace="Syncfusion.JavaScript.Mobile" />
        <add namespace="Syncfusion.JavaScript.Models" />        
        <add namespace="Syncfusion.EJ.ReportViewer" />
        <add namespace="Syncfusion.MVC.EJ" />
        <!-- EasyLOB -->
        <add namespace="EasyLOB" />
        <add namespace="EasyLOB.Resources" />
        <add namespace="EasyLOB.Data" />
        <add namespace="EasyLOB.Environment" />
        <add namespace="EasyLOB.Library" />
        <add namespace="EasyLOB.Mvc" />
        <add namespace="EasyLOB.WebApi" />
        <!-- EasyLOB.Activity -->
        <add namespace="EasyLOB.Activity" />
        <add namespace="EasyLOB.Activity.Data" />
        <add namespace="EasyLOB.Activity.Data.Resources" />
        <!-- Web API
        <add namespace="EasyLOB.Activity.Mvc" />
        -->
        <add namespace="EasyLOB.Activity.Resources" />
        <!-- EasyLOB.Authentication -->
        <add namespace="EasyLOB.Authentication" />
        <add namespace="EasyLOB.Authentication.Resources" />
        <!-- EasyLOB.AuditTrail -->
        <add namespace="EasyLOB.AuditTrail" />
        <add namespace="EasyLOB.AuditTrail.Data" />
        <add namespace="EasyLOB.AuditTrail.Data.Resources" />
        <!-- Web API
        <add namespace="EasyLOB.AuditTrail.Mvc" />
        -->
        <add namespace="EasyLOB.AuditTrail.Resources" />
        <!-- EasyLOB.Identity -->
        <add namespace="EasyLOB.Identity" />
        <add namespace="EasyLOB.Identity.Data" />
        <add namespace="EasyLOB.Identity.Data.Resources" />
        <!-- Web API
        <add namespace="EasyLOB.Identity.Mvc" />
        -->
        <add namespace="EasyLOB.Identity.Resources" />
        <!-- EasyLOB.Log -->
        <add namespace="EasyLOB.Log" />
        <add namespace="EasyLOB.Log.Resources" />
        <!-- EasyLOB.Security -->
        <add namespace="EasyLOB.Security" />
        <add namespace="EasyLOB.Security.Resources" />       
        <!-- Northwind -->
        <add namespace="Northwind" />
        <add namespace="Northwind.Data" />
        <add namespace="Northwind.Data.Resources" />
        <!-- Web API
        <add namespace="Northwind.Mvc" />
        <add namespace="Northwind.Mvc.Resources" />
        -->
        <add namespace="Northwind.Persistence" />
        <add namespace="Northwind.WebApi" />
      </namespaces>
    </pages>
  </system.web.webPages.razor>
  <system.webServer>
    <handlers>
      <remove name="BlockViewHandler" />
      <add name="BlockViewHandler" path="*" verb="*" preCondition="integratedMode" type="System.Web.HttpNotFoundHandler" />
    </handlers>
  </system.webServer>
</configuration>
